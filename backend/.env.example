# Application settings
PROPMGMT_APP_NAME=Property Management API
PROPMGMT_DEBUG=true
PROPMGMT_HOST=0.0.0.0
PROPMGMT_PORT=8000

# Cognito settings
PROPMGMT_AWS_REGION=us-east-1
PROPMGMT_COGNITO_REGION=us-east-1
PROPMGMT_COGNITO_USER_POOL_ID=your-user-pool-id
PROPMGMT_COGNITO_CLIENT_ID=your-app-client-id
PROPMGMT_COGNITO_CLIENT_SECRET=  # Leave empty if you don't have a client secret
PROPMGMT_COGNITO_DOMAIN=your-domain.auth.region.amazoncognito.com
PROPMGMT_COGNITO_SCOPES=openid,email,profile

# URLs
PROPMGMT_API_URL=http://localhost:8000
PROPMGMT_FRONTEND_URL=http://localhost:3000
PROPMGMT_REDIRECT_URI=http://localhost:8000/auth/callback

# Security
PROPMGMT_COOKIE_SECURE=false  # Set to true in production with HTTPS
