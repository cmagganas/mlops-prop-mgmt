# Application settings
PROPMGMT_APP_NAME=Property Management API
PROPMGMT_DEBUG=true
PROPMGMT_HOST=0.0.0.0
PROPMGMT_PORT=8000

# AWS Cognito settings
# -------------------
# Region where your Cognito User Pool is hosted
PROPMGMT_AWS_REGION=us-west-1
PROPMGMT_COGNITO_REGION=us-west-1

# User Pool ID from AWS Cognito console
PROPMGMT_COGNITO_USER_POOL_ID=us-west-1_abcdefghi

# App client ID from AWS Cognito console
PROPMGMT_COGNITO_CLIENT_ID=1a2b3c4d5e6f7g8h9i0j

# App client secret from AWS Cognito console (if client has a secret)
PROPMGMT_COGNITO_CLIENT_SECRET=your-client-secret-if-needed

# Domain name for your Cognito hosted UI
# There are three possible formats:
# 1. Prefix only (recommended): gets transformed to prefix.auth.region.amazoncognito.com
PROPMGMT_COGNITO_DOMAIN=your-domain-prefix

# 2. Full domain: used as-is (with https:// added if not present)
# PROPMGMT_COGNITO_DOMAIN=your-domain-prefix.auth.us-west-1.amazoncognito.com

# 3. Custom domain: used as-is (with https:// added if not present)
# PROPMGMT_COGNITO_DOMAIN=auth.example.com

# Space-separated OAuth scopes to request during authentication
PROPMGMT_COGNITO_SCOPES=openid email profile

# Application URLs
# ---------------
# Base URL for backend API
PROPMGMT_API_URL=http://localhost:8000

# Base URL for frontend application
PROPMGMT_FRONTEND_URL=http://localhost:3000

# OAuth callback URL (must match Cognito allowed callback URLs)
PROPMGMT_REDIRECT_URI=http://localhost:8000/auth/callback

# Security settings
# ---------------
# Whether cookies should be secure (HTTPS only)
# Set to true in production with HTTPS
PROPMGMT_COOKIE_SECURE=false

# Feature flags
PROPMGMT_ENABLE_OAUTH=true
